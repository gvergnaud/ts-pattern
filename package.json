{
  "name": "ts-pattern",
  "version": "4.0.2",
  "description": " The exhaustive Pattern Matching library for TypeScript.",
  "type": "module",
  "source": "src/index.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "main": "./dist/index.cjs",
  "types": "dist/index.d.ts",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch",
    "prepublishOnly": "npm run test && npm run build",
    "test": "jest",
    "clear-test": "jest --clearCache",
    "perf": "tsc --project tests/tsconfig.json --noEmit --extendedDiagnostics",
    "fmt": "prettier ./src/** ./tests/** -w",
    "check": "tsc --strict --noEmit --extendedDiagnostics"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/gvergnaud/ts-pattern.git"
  },
  "keywords": [
    "pattern",
    "matching",
    "pattern-matching",
    "typescript",
    "match-with",
    "match",
    "switch",
    "adt"
  ],
  "author": "Gabriel Vergnaud",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gvergnaud/ts-pattern/issues"
  },
  "homepage": "https://github.com/gvergnaud/ts-pattern#readme",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "jest": "^27.4.5",
    "microbundle": "^0.14.2",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  }
}
